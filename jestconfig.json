{
  "collectCoverage": true,
  "coverageDirectory": "./test/report",
  "coverageThreshold": {
      "global": {
          "branches": 75,
          "functions": 80,
          "lines": 80,
          "statements": 0
      }
  },
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest"
  },
  "preset": "ts-jest",
  "testEnvironment": "node",
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.[jt]sx?$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
}